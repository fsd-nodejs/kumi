{
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "all",
  "proseWrap": "never",
  "semi": false,
  "overrides": [{ "files": ".prettierrc", "options": { "parser": "json" } }],
  "plugins": [
    "prettier-plugin-organize-imports",
    "prettier-plugin-packagejson"
  ],

  "importOrder": [
    "^@/tests/(.*)$",
    "^@/utils/(.*)$",
    "^@/pages/(.*)$",
    "^@/services/(.*)$",
    "^@/assets/(.*)$",
    "^@/extension/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true
}
